%h1 Listing attachments

%table
  %thead
    %tr
      %th Image
      %th Position
      %th Dish
      %th Comment
      %th
      %th
      %th

  %tbody
    - @attachments.each do |attachment|
      %tr
        %td= image_tag "#{attachment.image}", size: "200x200"
        %td= attachment.position
        %td= attachment.dish
        %td= attachment.comment
        %td= link_to 'Show', attachment
        %td= link_to 'Edit', edit_attachment_path(attachment)
        %td= link_to 'Destroy', attachment, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Attachment', new_attachment_path
