= form_for @component do |f|
  - if @component.errors.any?
    #error_explanation
      %h2= "#{pluralize(@component.errors.count, "error")} prohibited this component from being saved:"
      %ul
        - @component.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :dish
    = f.text_field :dish
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :units
    = f.text_field :units
  .field
    = f.label :ingredient
    = f.text_field :ingredient
  .actions
    = f.submit 'Save'
